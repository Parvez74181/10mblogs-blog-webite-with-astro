---
export const prerender = false;
import { Image } from "@astrojs/image/components";
import searchIcon from "../../public/search-icon.svg";
import contactBg from "../../public/contact-bg-svg.svg";
---

<section class="pt-5 min-h-screen">
  {/* hero section */}
  <div class="hero-section mb-10 flex justify-center items-center flex-col">
    <h1
      class="shadow-text max-h-[100px] text-[75px] md:text-9xl lg:text-[150px]"
    >
      CONTACT
    </h1>

    <div
      class={`flex gap-5 justify-center flex-col md:flex-row items-center mx-2 md:mx-20`}
    >
      <Image
        src={contactBg}
        alt="contact-bg-svg.svg"
        class="w-2/5 md:w-5/12"
        height={300}
        width={438}
      />

      <div class="w-full md:w-2/3">
        <h1 class="hero-section-heading text-4xl mx-5 my-5 md:text-6xl">
          Connect with Us: Your Voice Matters!
        </h1>

        <p class="heading-paragraph mx-5 my-5 md:text-xl lg:w-[550px]">
          We're here to help! Reach out with any questions or feedback. We value
          your input and will respond promptly.
        </p>

        {/* search input */}
        <div class="mx-5 my-5 flex items-center md:mr-14 relative">
          <input
            type="search"
            id="search-input"
            name="search"
            placeholder="Search..."
            class="w-full bg-opacity-50 border bg-transparent border-gray-700 placeholder:text-gray-600 outline-none text-gray-800 py-2 leading-8 transition-colors duration-200 ease-in-out rounded-full px-5 pr-12"
          />
          {/* search icon */}

          <Image
            src={searchIcon}
            width={30}
            height={30}
            class="absolute right-2 flex items-center justify-center text-gray-900 cursor-pointer hover:text-blue-500 pr-2"
            alt="search-icon"
            id="search-icon"
          />
        </div>
      </div>
    </div>
  </div>
  <div
    class={`flex flex-col lg:flex-row justify-center items-center gap-20 pt-5`}
  >
    {/* contact form */}
    <div class="w-[95%] md:w-1/2 lg:w-2/6 mb-10 p-5 mx-auto">
      <form class="mb-10 p-5 mx-auto shadow-lg rounded-md">
        <h1 class="text-center text-3xl font-semibold mb-5">Contact Form</h1>

        {/* user email */}
        <div class="mb-5">
          <label
            html-for="userEmail"
            class="block mb-2 text-sm font-medium text-gray-900"
          >
            Your Email
          </label>
          <div class="relative">
            <div
              class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
            >
              <svg
                aria-hidden="true"
                class="w-5 h-5 text-gray-500"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
            </div>
            <input
              type="email"
              name="userEmail"
              class="bg-transparent border border-black text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5"
              placeholder="john@gmail.com"
              required
            />
          </div>
        </div>

        {/* user name */}
        <div class="mb-5">
          <label
            html-for="userName"
            class="block mb-2 text-sm font-medium text-gray-900"
          >
