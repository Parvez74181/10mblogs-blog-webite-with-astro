---
export const prerender = false;
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import aboutBg from "../../public/about-bg-svg.svg";
import searchIcon from "../../public/search-icon.svg";
import categorySvg from "../../public/about-page-blog-category.svg";
---

<Layout title="About | Discovering Our Rich Heritage | 10mBlogs">
  <section>
    {/* hero section for about page  */}
    <div class="hero-section mb-10 flex justify-center items-center flex-col">
      <h1
        class="shadow-text max-h-[100px] text-8xl mx-2 mt-2 md:text-9xl lg:text-[240px]"
      >
        ABOUT
      </h1>

      <div
        class="home-layout flex gap-5 justify-center flex-col md:flex-row items-center mx-2 md:mx-20"
      >
        <Image
          src={aboutBg}
          alt="about-bg-svg.svg"
          class="w-4/5 md:w-5/12"
          height={300}
          width={438}
        />

        <div class="w-full md:w-2/3">
          <h1 class="hero-section-heading text-3xl mx-5 my-5 md:text-6xl">
            Your Guide to a Flavorful Life
          </h1>

          <p class="heading-paragraph mx-5 my-5 md:text-xl lg:w-[550px]">
            Welcome to 10m Blogs! Explore insights, inspiration, and practical
            tips for enhancing your everyday life.
          </p>

          {/* search input */}
          <div class="mx-5 my-5 flex items-center md:mr-14 relative">
            <input
              type="search"
              id="search-input"
              name="search"
              placeholder="Search..."
              class="w-full bg-opacity-50 border bg-transparent border-gray-700 placeholder:text-gray-600 outline-none text-gray-800 py-2 leading-8 transition-colors duration-200 ease-in-out rounded-full px-5 pr-12"
            />
            {/* search icon */}

            <Image
              src={searchIcon}
              width={30}
              height={30}
              class="absolute right-2 flex items-center justify-center text-gray-900 cursor-pointer hover:text-blue-500 pr-2"
              alt="search-icon"
              id="search-icon"
            />
          </div>
        </div>
      </div>
    </div>

    {/* content category's */}
    <div class=`px-5 md:px-20`>
      <h3 class="heading text-3xl md:text-5xl mt-20 font-bold text-center">
        Explore Our Content
      </h3>
      <div class="flex justify-center items-center">
        <Image
          src={categorySvg}
          class="w-full md:w-2/3 mt-10"
          width={100}
          height={100}
          alt="about-page-blog-category"
        />
      </div>

      <p class="text-center pt-8 mb-5">
        That's not all! you can find many more
        <a class="text-blue-500 hover:underline" href={"/explore"}> here.</a>
      </p>

      <p class="mb-10 text-center leading-10">
        Thank you for visiting
        <a class="text-blue-500 hover:underline" href={"/explore"}>
          10m Blogs
        </a>
        .ðŸ˜Š Enjoy exploring my content as much as I enjoy sharing it with you.ðŸ¤©
        Happy reading!ðŸ’•
      </p>
    </div>
  </section>
</Layout>

<style lang="scss">
  .about-main-title {
    font-family: "Instrument Serif", serif;
    text-transform: uppercase;
  }
  .heading {
    -webkit-text-stroke: 1px black; /* Standard */
    color: transparent;
  }
  .shadow-text {
    color: #eeeeee;
    font-family: Gothic A1 !important;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
  }
  .heading,
  .heading-paragraph,
  .hero-section-heading {
    font-family: Gothic A1 !important;
  }
</style>

<script defer >
  const searchInputBox = document.querySelector("#search-input");
  const searchIconBox = document.querySelector("#search-icon");

  searchInputBox.addEventListener("keyup", (e) => {
    searchHandler(e);
  });
  searchIconBox.addEventListener("click", (e) => {
    searchHandler(e);
  });

  const searchHandler = (e) => {
    if (e.keyCode === 13 || e.key === "Enter") {
      let searchText = e.target.value.trim().toLowerCase();
      if (searchText) open(`/blog/search?search=${searchText}`, "_self");
    } else if (e.type === "click") {
      let parentNodeItem = e.target.parentNode;
      let searchInput = parentNodeItem.querySelector("#search-input");
      searchInput = searchInput?.value?.trim().toLowerCase();
      if (searchInput) open(`/blog/search?search=${searchInput}`, "_self");
    }
  };
</script>
