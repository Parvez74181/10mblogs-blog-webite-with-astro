---
export const prerender = false;
import { Image } from "@astrojs/image/components";
import footerLogo from "../../public/footer-logo.png";
---

<footer class="bg-gray-800 text-gray-200 w-full">
  <div class="mx-auto w-full">
    {/* upper part */}
    <div
      class="flex items-center justify-center flex-col md:justify-between md:flex-row p-5 md:w-3/4 md:mx-auto"
    >
      <a href="/" class="flex items-center mb-4 sm:mb-0">
        <Image
          width={300}
          height={150}
          format="webp"
          src={footerLogo}
          class="w-[150px] mr-3"
          alt="Logo"
        />
      </a>
      <ul class="flex flex-wrap items-center mb-6 font-medium sm:mb-0">
        <li>
          <a href="/" class="mr-4 hover:underline md:mr-6"> Home</a>
        </li>
        <li>
          <a href="/about" class="mr-4 hover:underline md:mr-6"> About</a>
        </li>
        <li>
          <a href="/explore" class="mr-4 hover:underline md:mr-6"> Explore</a>
        </li>
        <li>
          <a href="/privacy-policy" class="mr-4 hover:underline md:mr-6">
            Privacy Policy
          </a>
        </li>
        <li>
          <a href="/sitemap" class="mr-4 hover:underline md:mr-6"> Sitemap</a>
        </li>
        <li>
          <a href="/affiliate-disclouser" class="mr-4 hover:underline md:mr-6">
            Affiliate disclouser</a
          >
        </li>
      </ul>
    </div>

    {/* bottom part */}
    <div
      class="px-10 md:px-32 py-6 bg-gray-700 md:flex md:items-center md:justify-between"
    >
      <span
        class="text-sm sm:text-center flex justify-center md:justify-normal"
      >
        © 2023 <a href="/">&nbsp;10mBlogs™</a>. All Rights Reserved.
      </span>
      {/* social media icons */}
